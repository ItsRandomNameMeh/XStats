<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="305dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:drawableRight="@drawable/baseline_gas"
                android:drawablePadding="10dp"
                android:id="@+id/currentSTO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="current STO"
                android:textColor="#F3671D"
                android:textColorHint="#F3671D"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37"></EditText>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:backgroundTint="#25D585"
                android:layout_height="65dp"
                android:text="Apply"
                app:cornerRadius="10dp"
                android:id="@+id/materialButtonApply"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialButton"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="0dp" />

            <com.google.android.material.button.MaterialButton
                android:backgroundTint="#F3671D"
                android:id="@+id/materialButtonCansel"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="Cansel"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currentSTO"
                app:layout_constraintVertical_bias="0.092"
                tools:layout_editor_absoluteX="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>